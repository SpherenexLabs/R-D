// Single Screen - All Data Together

//  All data is dummy:
//  Heart Rate
// SpO2
// Temperature
// Humidity
// MPU6050 Angle
// MPU6050 Acceleration

#include <Wire.h>
#include <Adafruit_GFX.h>
#include <Adafruit_SSD1306.h>

#define SCREEN_WIDTH 128
#define SCREEN_HEIGHT 64
#define OLED_RESET    -1
Adafruit_SSD1306 display(SCREEN_WIDTH, SCREEN_HEIGHT, &Wire, OLED_RESET);

void setup() {
  display.begin(SSD1306_SWITCHCAPVCC, 0x3C);
  display.clearDisplay();
  display.setTextSize(1);
  display.setTextColor(SSD1306_WHITE);
}

void loop() {
  display.clearDisplay();
  display.setCursor(0, 0);
  display.println("All Data Summary");
  display.drawLine(0, 10, 127, 10, SSD1306_WHITE);

  display.setCursor(0, 13);
  display.print("HR: "); display.print(75); display.print("  ");
  display.print("SpO2: "); display.println(98);

  display.print("Temp: "); display.print(36.5); display.print("  ");
  display.print("Hum: "); display.println(45);

  display.print("AX: "); display.print(0.12);
  display.print(" AY: "); display.print(-0.04);
  display.print(" AZ: "); display.println(9.81);

  display.print("GX: "); display.print(20.4);
  display.print(" GY: "); display.print(-5.7);
  display.print(" GZ: "); display.println(180.0);

  display.display();
  delay(1000);
}
